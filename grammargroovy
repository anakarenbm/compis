programa ::= 'PROGRAM' 'ID' 'SEMI' programa1 bloque
programa1 ::= vars | empty

vars ::= 'VAR' vars1
vars1 ::= 'ID' 'COMMA' vars1 | 'ID' 'COLON' tipo 'SEMI' vars2
vars2 ::= vars1 | empty

tipo ::= 'INT' | 'FLOAT'

bloque ::= 'OBRACE' bloque1 'CBRACE'
bloque1 ::= estatuto bloque1 | empty

estatuto ::= asignacion | condicion | escritura

asignacion ::= 'ID' EQ expresion 'SEMI'

escritura ::= 'PRINT' 'OPAREN' escritura1 'CPAREN' 'SEMI'
escritura1 ::= escritura2 'COMMA' escritura1 | escritura2
escritura2 ::= 'STRING' | expresion

expresion ::= exp expresion1
expresion1 ::= 'REL' exp | empty

condicion ::= IF 'OPAREN' expresion 'CPAREN' bloque condicion1 'SEMI'
condicion1 ::= 'ELSE' bloque | empty

exp ::= termino 'SIGN' exp | termino

termino ::= factor OP termino | factor

factor ::= 'OPAREN' expresion 'OPAREN' | factor1 varcte
factor1 ::= 'SIGN' | empty

varcte ::= 'ID' | 'I' | 'F'